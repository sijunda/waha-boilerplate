# .env file

# === Basic Configuration ===
WHATSAPP_API_PORT=3000
WHATSAPP_API_HOSTNAME=localhost
# WHATSAPP_API_SCHEMA=https  # Uncomment if using HTTPS
WAHA_BASE_URL=http://localhost:3000

# === Security (Recommended) ===
# Contoh generate API key SHA512 hash:
# echo -n "my-secret-key" | shasum -a 512
WAHA_API_KEY=sha512:7c4a8d09ca3762af61e59520943dc26494f8941b

# Atau kalau mau pakai plain text (kurang aman):
# WAHA_API_KEY_PLAIN=my-secret-key

# === Engine Configuration ===
# Pilihan: WEBJS (default), NOWEB, GOWS
WHATSAPP_DEFAULT_ENGINE=NOWEB

# === Logging ===
WAHA_LOG_LEVEL=info  # error | warn | info | debug | trace
WAHA_HTTP_LOG_LEVEL=info
# DEBUG=1  # Shortcut untuk debug logging

# === Session Configuration ===
# Maksimal sesi (khusus versi Plus)
# WHATSAPP_MAX_SESSIONS=10

# === Webhook Configuration (Optional) ===
# WHATSAPP_HOOK_URL=https://webhook.site/your-uuid
# WHATSAPP_HOOK_EVENTS=message,message.ack

# === Database Configuration (Optional) ===
# PostgreSQL:
# WHATSAPP_SESSIONS_POSTGRESQL_URL=postgres://postgres:postgres@postgres:5432/postgres?sslmode=disable

# MongoDB:
# WHATSAPP_SESSIONS_MONGO_URL=mongodb://mongouser:mongopass@mongodb:27017/waha

# === Dashboard Configuration ===
WAHA_DASHBOARD_ENABLED=true
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=yourStrongPasswordHere

# === Timezone ===
TZ=Asia/Jakarta
